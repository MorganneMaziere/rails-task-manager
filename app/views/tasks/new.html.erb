<h1 class="mb-3">New Task</h1>

<%= form_with(model: @task, url: tasks_path, html: {class: "mb-3"}) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :details, class: "form-label" %>
    <%= form.text_area :details, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= form.label :completed, class: "form-check-label" %>
    <%= form.check_box :completed, class: "form-check-input" %>
  </div>

  <%= form.submit 'Create Task', class: "btn btn-primary" %>
<% end %>
